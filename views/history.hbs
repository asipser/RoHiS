<!DOCTYPE html>
<html>
<head>
	<title>MoneyMatters</title>
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
	<link rel="stylesheet" type="text/css" href="/dist/semantic.min.css">
	<link rel="stylesheet" type="text/css" href="/stylesheets/style.css">
</head>
<body>
	{{#if user}}
	{{> menu-partial}}
	<div class="pusher">
		{{> top-bar-partial}}
		<div class="ui container" id="historypanel">
			<div class="ui divider"></div>
			<div class="ui container">
				<h2 class="ui header">Historical Charges</h2>
				<div class="ui grid">
					<div class="eight wide column">
						<h3 class="ui small header">History of charges owed to you</h3>
						{{#each history_owe_you}}
						<p data-title="Created by {{creator}} on {{date_created}}" data-text="Completed by {{who_completed}} on {{date_completed}}" id="{{id}}">{{username}} paid you ${{amount}}</p>
						{{/each}}
					</div>
					<div class="eight wide column">
						<h3 class="ui small header">History of charges you owed</h3>
						{{#each history_you_owe}}
						<p data-title="Created by {{creator}} on {{date_created}}" data-text="Completed by {{who_completed}} on {{date_completed}}" id="{{id}}">You paid {{username}} ${{amount}}</p>
						{{/each}}
					</div>
				</div>
			</div>
			<br>
			<div class="ui container">
				<h2 class="ui header">Cancelled Charges</h2>
				<div class="ui grid">
					<div class="eight wide column">
						<h3 class="ui small header">Cancelled charges owed to you</h3>
						{{#each cancelled_owe_you}}
						<p data-title="Created by {{creator}} on {{date_created}}" data-text="Cancelled by {{who_cancelled}} on {{date_cancelled}}" class="{{id}}">{{who_cancelled}} cancelled a charge of ${{amount}}</p>
						{{/each}}
					</div>
					<div class="eight wide column">
						<h3 class="ui small header">Cancelled charges you owe</h3>
						{{#each cancelled_you_owe}}
						<p data-title="Created by {{creator}} on {{date_created}}" data-text="Cancelled by {{who_cancelled}} on {{date_cancelled}}" class="{{id}}">{{who_cancelled}} cancelled a charge of ${{amount}}</p>
						{{/each}}
					</div>
				</div>
			</div>
		</div>
	</div>
	{{else}}
	{{> home-page-partial}}
	{{/if}}
	<script src="/dist/semantic.min.js"></script>
	<script src="/javascripts/index.js"></script>
</body>
</html>